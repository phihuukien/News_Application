@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<header>
    <!-- Header desktop -->
    <div class="container-menu-desktop">

        <!-- Header Mobile -->
        <div class="wrap-header-mobile">
            <!-- Logo moblie -->
            <div class="logo-mobile">
                <a href="/"><img src="/User/images/icons/logo-01.png" alt="IMG-LOGO"></a>
            </div>

            <!-- Button show menu -->
            <div class="btn-show-menu-mobile hamburger hamburger--squeeze m-r--8">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </div>
        </div>

        <div class="menu-mobile" style="display: none;">
            <ul class="main-menu-m">


                <li>
                    <a href="category-01.html">News</a>
                </li>

                <li>
                    <a href="category-02.html">Entertainment </a>
                </li>


            </ul>
        </div>

        <!--  -->
        <div class="wrap-logo container">
            <!-- Logo desktop -->
            <div class="logo">
                <a href="/"><img src="/User/images/icons/logo-01.png" alt="LOGO"></a>
            </div>

            <!-- Banner -->
            <div class="banner-header">
                <a href="https://themewagon.com/themes/free-bootstrap-4-html5-news-website-template-magnews2/"><img src="/User/images/banner-01.jpg" alt="IMG"></a>
            </div>
        </div>

        <!--  -->
        <div class="wrap-main-nav">
            <div class="main-nav">
                <!-- Menu desktop -->
                <nav class="menu-desktop">
                    <a class="logo-stick" href="index.html">
                        <img src="/User/images/icons/logo-01.png" alt="LOGO">
                    </a>

                    <ul class="main-menu" style="align-items:center; justify-content:center;">
                        @if (HttpContextAccessor.HttpContext.Session.GetString("activeBy") == "home")
                        {
                            <li class="main-menu-active">
                                <a href="/"><i class="fas fa-home"></i></a>

                            </li>
                        }
                        else
                        {
                            <li class="">
                                <a href="/"><i class="fas fa-home"></i></a>

                            </li>
                        }

                        @await Component.InvokeAsync("Category")

                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>
